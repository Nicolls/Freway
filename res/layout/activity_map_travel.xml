<!-- This can go anywhere in your layout (see other demos for some examples). -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/message_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="map" />

    <TextView
        android:id="@+id/message_bluetooth_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="blue_state" />

    <TextView
        android:id="@+id/message_bluetooth_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="blue_data" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#D000"
        android:orientation="horizontal" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onStart"
            android:text="start"
            android:textSize="14sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onPause"
            android:text="pause"
            android:textSize="14sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onResume"
            android:text="resume"
            android:textSize="14sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onCompleted"
            android:text="ok"
            android:textSize="14sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onStop"
            android:text="stop"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible" >

        <CheckBox
            android:id="@+id/cb_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSport"
            android:text="sp"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/cb_elc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onElc"
            android:text="elc"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/cb_power1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onPower1"
            android:text="P1" />

        <CheckBox
            android:id="@+id/cb_power3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onPower3"
            android:text="P3"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/cb_light_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onLightFront"
            android:text="front_l" />

        <CheckBox
            android:id="@+id/cb_light_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onLightBack"
            android:text="back_l" />

        <CheckBox
            android:id="@+id/cb_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCall"
            android:text="call" />

        <CheckBox
            android:id="@+id/cb_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMessage"
            android:text="msg" />
    </LinearLayout>

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment" />

</LinearLayout>