<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <CheckBox
            android:id="@+id/cb_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSport"
            android:text="运动"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/cb_elc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onElc"
            android:text="电动"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/cb_power1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onPower1"
            android:text="助力1" />

        <CheckBox
            android:id="@+id/cb_power3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onPower3"
            android:text="助力3"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/cb_light_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onLightFront"
            android:text="前灯" />

        <CheckBox
            android:id="@+id/cb_light_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onLightBack"
            android:text="后灯" />

        <CheckBox
            android:id="@+id/cb_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCall"
            android:text="电话" />

        <CheckBox
            android:id="@+id/cb_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onMessage"
            android:text="短信" />
    </LinearLayout>

    <TextView
        android:id="@+id/ble_tv_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="蓝牙状态" />

    <LinearLayout
        android:id="@+id/ble_ll_ready"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请在下方输入框中输入命令字和参数，每个字节以,隔开。输入完成后点击生成要发送的数据。如：31,00  31表示命令，00表示参数"
            />
        <EditText
            android:id="@+id/ble_et_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="31,00" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onCreateData"
            android:text="生成要发送的数据" />

        <TextView
            android:id="@+id/ble_tv_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="要发送出去的数据" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onSend"
            android:text="发送" />
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
		    <TextView
            android:id="@+id/ble_tv_receive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="收到的数据：要多点击发送几下，有时候数据有可能 不回来。" />

		    <Button
		        android:id="@+id/ble_btn_clear"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:onClick="onClearReceive"
		        android:text="清空" />

		</LinearLayout>
        <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
		    <TextView
            android:id="@+id/ble_tv_receive_format"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="格式化收到的数据：要多点击发送几下，有时候数据有可能 不回来。" />

		    <Button
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:onClick="onClearFormat"
		        android:text="清空" />

		</LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ble_ll_init"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onSearch"
            android:text="搜索" />

        <ListView
            android:id="@+id/ble_listview"
            android:background="@color/model_night_view_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>