        <item name="android:paddingLeft">@dimen/travel_state_paddingHorizontal</item>
        <item name="android:paddingRight">@dimen/travel_state_paddingHorizontal</item>
    </style>

    <style name="TravelStateCalValue">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TravelStateCalUnit">
        <item name="android:textColor">@color/text_gray_shallow</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TravelStateSpendTimeValue">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TravelStateSpeedValue">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="TravelStateSpeedUnit">
        <item name="android:textColor">@color/text_gray_shallow</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TravelStateTitleText">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">7sp</item>
    </style>

    <style name="TravelStateValueText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TravelStateUnitText">
        <item name="android:textColor">@color/text_gray_shallow</item>
        <item name="android:textSize">9sp</item>
    </style>
    <!-- battery state -->
    <style name="BatteryStatePadding">
        <item name="android:paddingTop">@dimen/battery_state_paddingTop</item>
        <item name="android:paddingBottom">@dimen/battery_state_paddingBottom</item>
        <item name="android:paddingLeft">@dimen/battery_state_paddingHorizontal</item>
        <item name="android:paddingRight">@dimen/battery_state_paddingHorizontal</item>
    </style>

    <style name="BatteryStateTipText">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_gray_deep</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BatteryStateValueText">
        <item name="android:textColor">@color/text_gray_deep</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="BatteryStateUnitText">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BatteryStatePercentText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">60sp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:drawableLeft">@drawable/battery_pic_day</item>
    </style>

    <style name="BatteryStateGearText">
        <item name="android:textColor">@color/text_gray_deep</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <!-- speed state -->
    <style name="SpeedStateSpeedText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">75sp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="SpeedStateCalValue">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SpeedStateCalUnit">
        <item name="android:textColor">@color/text_gray_shallow</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SpeedStateSpendTimeText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SpeedStateParamLL">
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/speed_state_param_grid_padding</item>
    </style>

    <style name="SpeedStateTitleText">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="SpeedStateValueText">
        <item name="android:minEms">2</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="SpeedStateUnitText">
        <item name="android:textColor">@color/text_gray_shallow</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- profile -->
    <style name="ProfileHeadPicLayout">
        <item name="android:layout_width">@dimen/profile_pic_width_height</item>
        <item name="android:layout_height">@dimen/profile_pic_width_height</item>
        <item name="android:layout_marginTop">@dimen/profile_pic_margin</item>
        <item name="android:padding">@dimen/profile_pic_padding</item>
        <item name="android:background">@drawable/profile_icon_ellipse</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ProfileName">
        <item name="android:layout_marginLeft">@dimen/profile_pic_text_padding</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProfileTravelCountLL">
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/profile_rectangle</item>
        <item name="android:layout_marginLeft">@dimen/profile_total_time_hor_spacing</item>
        <item name="android:layout_marginRight">@dimen/profile_total_time_hor_spacing</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ProfileTotalValue">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="ProfileTotalUnit">
        <item name="android:layout_marginTop">@dimen/profile_total_time_ver_spacing</item>
        <item name="android:layout_marginBottom">@dimen/profile_total_time_ver_spacing</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_white_smoke</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="ProfileNavImageButtonLL">
        <item name="android:paddingLeft">@dimen/profile_imagebutton_ll_paddingHorizontal</item>
        <item name="android:paddingRight">@dimen/profile_imagebutton_ll_paddingHorizontal</item>
        <item name="android:paddingTop">@dimen/profile_imagebutton_ll_paddingVertical</item>
        <item name="android:paddingBottom">@dimen/profile_imagebutton_ll_paddingVertical</item>
        <item name="android:background">@drawable/profile_rectangle_selector</item>
    </style>

    <style name="ProfileNavText">
        <item name="android:layout_marginLeft">@dimen/profile_imagebutton_tv_marginLeft</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_white_gray</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!-- settting -->
    <style name="SettingLayout">
        <item name="android:paddingTop">@dimen/setting_ll_paddingTop</item>
        <item name="android:paddingBottom">@dimen/setting_ll_paddingBottom</item>
        <item name="android:paddingLeft">@dimen/setting_ll_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/setting_ll_padding_horizontal</item>
    </style>

    <style name="SettingBtnLayout">
        <item name="android:layout_marginTop">@dimen/setting_cicle_btn_marginTop</item>
        <item name="android:layout_marginLeft">@dimen/setting_cicle_btn_marginHorizontal</item>
        <item name="android:layout_marginRight">@dimen/setting_cicle_btn_marginHorizontal</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/settings_button_rectangle</item>
        <item name="android:padding">@dimen/setting_cicle_btn_padding</item>
    </style>

    <style name="SettingProfileText">
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SettingProfileTextLeft" parent="SettingProfileText">
        <item name="android:gravity">left</item>
    </style>

    <style name="SettingProfileTextRight" parent="SettingProfileText">
        <item name="android:gravity">right</item>
    </style>

    <style name="SettingMyEbike">
        <item name="android:layout_marginLeft">@dimen/setting_cicle_btn_marginHorizontal</item>
        <item name="android:drawableLeft">@drawable/settings_icon_bike</item>
        <item name="android:paddingLeft">@dimen/setting_cicle_btn_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SettingBtnText">
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SettingBtnTextLeft" parent="SettingBtnText">
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="SettingBtnTextRight" parent="SettingBtnText">
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item>
    </style>
	<!-- ble -->
