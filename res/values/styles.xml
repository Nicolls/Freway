<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="GVLoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground"> @android:color/transparent </item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!-- sign -->
    <style name="SignInputLayout">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/sign_input_layout_bg</item>
        <item name="android:layout_marginLeft">@dimen/sign_input_layout_margin</item>
        <item name="android:layout_marginRight">@dimen/sign_input_layout_margin</item>
        <item name="android:layout_marginTop">@dimen/sign_input_layout_margin</item>
        <item name="android:paddingTop">@dimen/sign_input_layout_paddingVertical</item>
        <item name="android:paddingBottom">@dimen/sign_input_layout_paddingVertical</item>
        <item name="android:paddingLeft">@dimen/sign_input_layout_paddingHorizontal</item>
        <item name="android:paddingRight">@dimen/sign_input_layout_paddingHorizontal</item>
    </style>

    <style name="SignTitleTv">
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:drawableLeft">@drawable/sign_title_line</item>
        <item name="android:drawableRight">@drawable/sign_title_line</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_SignTitleTv</item>
    </style>

    <style name="SignInput">
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginTop">@dimen/sign_et_spacing</item>
        <item name="android:background">@drawable/sign_et_long_bg</item>
        <item name="android:drawablePadding">@dimen/sign_et_drawable_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/sign_et_paddingHorizontal</item>
        <item name="android:paddingRight">@dimen/sign_et_paddingHorizontal</item>
        <item name="android:textColor">@color/text_white_gray</item>
        <item name="android:textSize">@dimen/text_size_SignInput</item>
    </style>

    <style name="SignButton">
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/sign_btn_bg</item>
        <item name="android:textColor">@color/text_white_gray</item>
        <item name="android:textSize">@dimen/text_size_SignButton</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SignButtonShort" parent="SignButton">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SignButtonLong" parent="SignButton">
        <item name="android:layout_marginLeft">@dimen/sign_btn_sign_up_marginHorizontal</item>
        <item name="android:layout_marginRight">@dimen/sign_btn_sign_up_marginHorizontal</item>
        <item name="android:layout_marginTop">@dimen/sign_btn_sign_up_marginTop</item>
    </style>

    <style name="SignButtonThird">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/sign_btn_third_margin_bottom</item>
        <item name="android:background">@null</item>
    </style>

    <!-- custom -->

    <style name="TopBarTitleText">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_TopBarTitleText</item>
    </style>

    <style name="TopBarRightText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/text_white_gray</item>
        <item name="android:textSize">@dimen/text_size_TopBarRightText</item>
    </style>
