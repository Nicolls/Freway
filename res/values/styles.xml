        <item name="android:background">@drawable/profile_icon_ellipse</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ProfileName">
        <item name="android:layout_marginLeft">@dimen/profile_pic_text_padding</item>
        <item name="android:textSize">@dimen/text_size_ProfileName</item>
        <item name="android:textColor">@color/white</item>
